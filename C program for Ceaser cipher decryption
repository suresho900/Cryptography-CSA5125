#include <stdio.h>
int main() {
    char text[1000];
    int i, key;
    printf("Enter the plaintext: ");
    gets(text); 
    printf("Enter key (1-25): ");
    scanf("%d", &key);
    for (i = 0; text[i] != '\0'; i++) {
        char ch = text[i];
        if (ch >= 'A' && ch <= 'Z') {
            ch = ch + key;
            if (ch > 'Z')
                ch = ch - 26;
        } else if (ch >= 'a' && ch <= 'z') {
            ch = ch + key;
            if (ch > 'z')
                ch = ch - 26;
        }
        text[i] = ch;
    }
    printf("Encrypted text: %s\n", text); 
    return 0;
}

//output:-
//Encrypted text: khoorhyhubrqh
//Shift (1-25): 3
//Decrypted text: helloeveryone

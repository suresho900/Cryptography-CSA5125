#include <stdio.h>
#include <ctype.h>

int main() {
    char text[1000];
    int k;
    printf("Text: ");
    fgets(text, sizeof(text), stdin);
    printf("Shift (1-25): ");
    scanf("%d", &k);

    for (int i = 0; text[i]; i++) {
        if (isalpha(text[i])) {
            char base = isupper(text[i]) ? 'A' : 'a';
            text[i] = (text[i] - base + k) % 26 + base;
        }
    }

    printf("Encrypted: %s", text);
    return 0;
}
//Output:-
//Text: helloeveryone
//Shift (1-25): 3
//Encrypted: khoorhyhubrqh
